#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1
export USE_SYSTEM=true

configure: configure-stamp
configure-stamp:
	dh_testdir
	# Add here commands to configure the package.
	cd Project/GNU/CLI && chmod u+x autogen
	cd Project/GNU/CLI && ./autogen
	cd Project/GNU/CLI && ./configure --prefix=/usr

	cd Source/GUI/dvrescue && qmake -recursive BINDIR=/usr/bin

	touch $@


build: build-stamp
build-stamp: configure-stamp
	dh_testdir

	# Add here commands to compile the package.
	cd Project/GNU/CLI && $(MAKE)

	cd Source/GUI/dvrescue && $(MAKE)

	touch $@

clean:
	dh_testdir
	dh_testroot

	# Add here commands to clean up after the build process.
	# $(MAKE) clean

	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	# Add here commands to install the package into debian/tmp
	cd Project/GNU/CLI && $(MAKE) install DESTDIR=$(CURDIR)/debian/tmp
	install -D -m 644 LICENSE.txt $(CURDIR)/debian/tmp/usr/share/doc/dvrescue/LICENSE.txt

	install -D -m 644 LICENSE.txt $(CURDIR)/debian/tmp/usr/share/doc/dvrescue-gui/LICENSE.txt
	install -D -m 755 Source/GUI/dvrescue/dvrescue/dvrescue $(CURDIR)/debian/tmp/usr/bin/dvrescue-gui

	install -D -m 644 Source/Resource/Image/Icon.png $(CURDIR)/debian/tmp/usr/share/pixmaps/dvrescue.png
	install -D -m 644 Project/GNU/GUI/dvrescue-gui.desktop $(CURDIR)/debian/tmp/usr/share/applications/dvrescue-gui.desktop
	install -D -m 644 Project/GNU/GUI/dvrescue-gui.metainfo.xml $(CURDIR)/debian/tmp/usr/share/metainfo/dvrrescue-gui.metainfo.xml

# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_install --sourcedir=debian/tmp
	dh_installchangelogs -p dvrescue History.txt
	dh_installchangelogs -p dvrescue-gui History.txt
	dh_installdocs
	dh_installexamples
#	dh_install
#	dh_installmenu
#	dh_installdebconf
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_installinit
#	dh_installcron
#	dh_installinfo
	dh_installman
	dh_link
	dh_strip -p dvrescue --dbg-package=dvrescue-dbg
	dh_strip -p dvrescue-gui --dbg-package=dvrescue-gui-dbg
	dh_compress
	dh_fixperms
#	dh_perl
#	dh_python
	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
